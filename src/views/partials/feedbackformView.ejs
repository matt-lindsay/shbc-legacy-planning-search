<div class="form-group">
    <form name="feedbackForm" action="/Feedback" method="post">
        <div class="form-group">
            <label for="comment">Please enter a comment below about the functionality of this app</label>
            <textarea cols="40" rows="4" id="comment" name="comment" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label for="email">Your Email Address(optional)</label>
            <input type="email" id="email" name="email" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Submit"/>    
        </div>
    </form>
</div>